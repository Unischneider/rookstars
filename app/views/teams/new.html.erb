<div class="container">
  <div class="title">
    <h1>Create your team</h1>
  </div>
  <div class="form">
    <%= simple_form_for [@project, @team] do |f| %>
      <%= f.simple_fields_for :application do |p| %>
        <%= p.input :pitch %>
      <% end %>
      <%= f.input :about_us %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
