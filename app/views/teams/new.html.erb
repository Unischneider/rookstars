
<%= render 'components/progress' %>
<div class="container-fluid">
  <% unless @team_members.first.nil? %>
  <div class="two-column-content">
    <div class="row">
      <div class="double-cta">
        <div class="left-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg2.jpg' %>'); background-size: cover; background-position: center">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>Do you already have a team?</h1>
            </div>
            <div class="cta-button">
              <%= link_to "Find your team!", project_teams_path, class: "custom-primary-btn" %>
            </div>
          </div>
        </div>
        <div class="right-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>Don't have a team yet?</h1>
            </div>
            <div class="cta-button">
              <%= link_to "Create your own!", project_teams_path, method: :post, class: "custom-primary-btn" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="one-column-content" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
    <div class="cta-content">
        <hr>
        <div class="text">
          <h1>Don't have a team yet?</h1>
        </div>
        <div class="cta-button">
          <%= link_to "Create your own!", project_teams_path, method: :post, class: "custom-primary-btn" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
