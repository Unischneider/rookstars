<div class="header-container" style="background-image: url('<%= cl_image_path @project.pic_url %>'); background-size: cover; background-position: center">
  <div class="header-content">
    <div class="text-center intro-text">
      <h1><%= @project.title %></h1>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="two-column-content">
    <div class="row">
      <div class="double-cta">
        <div class="left-cta col-xs-12 col-md-6">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>About the NGO</h1>
              <p><%= @organization.description %></p>
            </div>
            </div>
          </div>
        </div>
        <div class="right-cta col-xs-12 col-md-6">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>About the Project</h1>
              <p>Project details:</p>
              <p><strong> <%= @project.description %></strong></p><br>
              <p>Due date:</p>
              <p><strong><%= @project.due_date %></strong></p><br>
              <p>Budget:</p> <p> <strong> <%= @project.budget %> </strong></p>
            </div>
            <div class="cta-button">
              <%= link_to "collaborate", teams_new_path, class: "custom-primary-btn" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="header-container">
  <div class="header-content">
    <div class="text-center intro-text">
      <h3>Want to collaborate?</h3>
      <h4>Join the Rookstar community!</h4>
      <div class="cta-button">
        <%= link_to "sign up", new_user_registration_path, class: "custom-primary-btn" %>
      </div>
    </div>
  </div>
</div>
