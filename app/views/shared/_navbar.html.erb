<div class="navbar-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-top-eric" do %>
    <% if user_signed_in? %>
      <div class="navbar-top-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagonwagonwagonwagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-top-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-top-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <div class="nav-content">
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-top-eric" %>
      </div>
    <% end %>
  <% end %>


  <div class="brand">
    <a href="/" class="navbar-wagon-brand">
      <img src="<%= asset_path("logo.png")%>" alt="">
    </a>
  </div>
</div>

<div class="navbar-bottom">
  <div class="navbar-bottom-right hidden-xs hidden-sm">

      <!-- Links when logged in -->
    <%= link_to "Home", "#", class: "navbar-bottom-item navbar-top-link" %>
    <%= link_to "About", "#", class: "navbar-bottom-item navbar-top-link" %>
    <%= link_to "Projects", "#", class: "navbar-bottom-item navbar-top-link" %>
    <%= link_to "FAQ", "#", class: "navbar-bottom-item navbar-top-link" %>
  </div>





















</div>
