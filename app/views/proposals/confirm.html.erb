<div class="header-container-small" style="background-image: url('<%= cl_image_path @proposal.project.photo, crop: :fill %>');">
  <div class="header-content">
    <div class="text-center intro-text">
      <h1>Team Proposal</h1>

    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="two-column-content">
    <div class="row">
      <div class="double-cta">
        <div class="left-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg2.jpg' %>'); background-size: cover; background-position: center">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>Team</h1>
              <div class="team-avatar">
                <% @team_members.each do |member| %>
                <% if member.user.photo %>
                <%= cl_image_tag member.user.photo, class: "member-avatar" %>
                <% end %>
                <% end %>
              </div>
              <% @team_members.each do |member| %>
              <p><%= member.user.first_name %>
                <% if member.user.last_name %>
                <%= member.user.last_name %></p>
                <% end %>
                <% end %>
                <br>
                <p class="tag-label">Application Status</p>
                <% if @proposal.joinable %>
                <p>This team is closed</p>
                <% else %>
                <p>This team is open for applicants</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="right-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1>Elevator Pitch</h1>
              <p class="tag-label"><%= @proposal.project.organization.name %></p>
              <p><strong> <%= @proposal.pitch %></strong></p>
              <br>
              <p class="tag-label">Status</p>
              <p><%= @proposal.status %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="one-column-content" style="background-image: url('<%= cl_image_path 'bg2.jpg' %>'); background-size: cover; background-position: center">
  <div class="container-fluid">
    <div class="cta-content">
      <hr>
      <div class="text">
        <h1>About the team</h1>
        <p><%= @proposal.team.about_us%></p>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="two-column-content">
    <div class="row">
      <div class="double-cta">
        <div class="left-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg2.jpg' %>'); background-size: cover; background-position: center">
          <div class="cta-content">
            <hr>
            <div class="text">
              <h1><%= @proposal.project.organization.name %> wants your team to manage the implementation of the  Project: <%= @proposal.project.title %></h1>
              <p>Accept it now and start working in the office</p>
              <div class="cta-button">
                <%= link_to "Accept", project_classroom_path, class: "custom-primary-btn"  %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="right-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
        <div class="cta-content">
          <hr>
          <div class="text">
            <h1>You don't want to collaborate</h1>
            <p>Let <%= @proposal.project.organization.name %> know!</p>
            <div class="cta-button">
              <%= link_to "Decline", projects_path, class: "custom-primary-btn"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
