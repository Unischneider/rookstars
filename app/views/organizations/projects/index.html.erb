<div class="header-container" style="background-image: url('<%= cl_image_path 'bg.jpg' %>'); background-size: cover; background-position: center; background-attachment: fixed">
  <div class="header-content">
    <div class="text-center intro-text">
      <h1>Look at the projects <br>
      that have been developed through our tool.</h1>
    </div>
  </div>
</div>
<% if organization_signed_in? %>
<div class="two-column-cta">
  <div class="row">
    <div class="double-cta">
      <div class="left-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg2.jpg' %>'); background-size: cover; background-position: center">
        <div class="cta-content">
          <hr>
          <div class="text">
            <h1>Need some help from a developer?</h1>
            <p>Create a new project</p>
          </div>
          <div class="cta-button">
            <%= link_to "Add your project!", new_project_path, class: "custom-primary-btn" %>
          </div>
        </div>
      </div>
      <div class="right-cta col-xs-12 col-md-6" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
        <div class="cta-content">
          <hr>
          <div class="text">
            <h1>Have already projects up for applications?</h1>
            <p>See the applications for your projects</p>
          </div>
          <div class="cta-button">
           <%= link_to "Applications", organizations_proposals_path, class: "custom-primary-btn" %>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>
<% else %>
<div class="one-column-content" style="background-image: url('<%= cl_image_path 'bg3.jpg' %>'); background-size: cover; background-position: center">
  <div class="container-fluid">
    <div class="cta-content">
      <hr>
      <div class="text" style="color: white !important;">
        <h1>Don't have an Account yet?</h1>
      </div>
      <div class="cta-button">
        <%= link_to "Add your organization and your projects!", new_organization_registration_path, class: "custom-primary-btn" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% if current_organization %>
<div class="container-cards">
  <% @projects = @on_goings %>
  <h1>Projects that are on going</h1>
  <br>
<div class="container">
<%= render 'components/cards' %>
</div>
  <h1>Projects that have not started yet</h1>
  <% @projects = @pendings  %>
  <div class="container">
  <%= render 'components/cards' %>
  </div>
  <h1>Projects that are done</h1>
  <% @projects = @dones  %>
  <div class="container">
  <%= render 'components/cards' %>
  </div>
</div>
<% else %>
<div class="container-cards">
<h1>Projects that are being done through rookstars</h1>
  <div class="container">
  <%= render 'components/cards' %>
  </div>
</div>
<% end %>
