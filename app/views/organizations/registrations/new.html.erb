<div class="container">
  <div class="signing-form">
    <div class="row">
      <div class="text-center">
        <h2>Sign up</h2>
      </div>
      <div class="col-xs-8 col-xs-offset-2">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true %>
          <%= f.input :description, required: true, autofocus: true %>
          <%= f.input :location, required: true, autofocus: true %>
          <%= f.input :website, required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :photo, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "custom-primary-btn" %>
        </div>
        <% end %>

        <%= render "organizations/shared/links" %>
      </div>
    </div>
  </div>
</div>
